n=int(input())
list=[]
result=0
for _ in range(n):
    list.append(int(input()))
for i in range(n-1):
    list.sort()
    result+=(list[0]+list[1])
    list.append(list[0]+list[1])
    list.remove(list[0])
    list.remove(list[0])
print(result)

'''import heapq
n=int(input())
heap=[]
for i in range(n):
    data=int(input())
    heapq.heappush(heap,data)
result=0
while len(heap)!=1:
    one=heapq.heappop(heap)
    two=heapq.heappop(heap)
    sum_value=one+two
    result+=sum_value
    heapq.heappush(heap,sum_value)
print(result)'''
